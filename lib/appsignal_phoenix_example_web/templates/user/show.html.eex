<h1>Show User</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

</ul>

<h2>Jobs</h2>
<%= if Enum.count(@user.jobs) > 0 do %>
  <%= for job <- @user.jobs do %>
    <p><%= job.company_name %> (<%= job.title %>)</p>
  <% end %>
<% else %>
  <p>No Jobs</p>
<% end %>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
